page{
  height: 100%;
  background: #eee;
}
.title{
  background: rgb(24, 158, 216);
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1px solid #fff;
}
.box{
  height: 100%;
  background: #fff;
}
.box-content{
  
  text-align: center;
  line-height: 80rpx;
  margin: 2% 1% 1% 3%;
  float: left;
  width: 28%;
  height: 80rpx;
  border: 1px solid #bbb;
}



.setMsg{
  font-size: 32rpx;
  height: 70rpx;
  line-height: 70rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 20rpx;    
  width: 90%;
  bottom: 20rpx;  
  background: #1195db;
}
.setText{
  text-align: center;
  color: #fff;
}