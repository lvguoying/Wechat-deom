/* pages/rich/rich.wxss */
/* glorylist start  */
.glorylist .flex-wrap{
  display: -webkit-flex;
}
.glorylist .region{
  width: 750rpx;
}
.glorylist .headPhoto{
  width: 190rpx;
  height: 190rpx;
  background-color: red;
  flex: 1;
}
.glorylist .detail{
  padding-left: 20rpx;
   padding-top:20rpx; 

  flex: 2;
}
.glorylist .richBox{
  border-bottom:1px black solid ;
  height: 190rpx;
}

/* glorylist end  */
/* topbar  begin*/
 
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
}  
.navbar .item.active{  
  color: #FFCC00;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #FFCC00;  
}  
/* topbar  end*/

/* <!-- 个人消息/信息 --> start*/
.person{
  margin: 20rpx 50rpx;
  border-bottom: 6rpx solid #ccc;
} 

.person-avatar{
  /* display: inline-block; */
  width: 128rpx;
  height: 128rpx;
   border-radius: 64rpx; 
  /* background-color: #eee;  */
  vertical-align: bottom  
}
.person-info{
  display: inline-block;
  height: 100rpx;
  margin-left: 30rpx;
  /* vertical-align: top;   */
}
.person-name{
  padding-bottom: 10rpx;
}
.type{
  font-size: 28rpx;
  color: #ccc;
}
.person-server{
  margin: 20rpx 0;
}
/* 去除浮动 */
.person-server::after{
  content: '';
  clear: both;
  display: block;
  width: 0;
  overflow: hidden;
}
.p-server-item{
  font-size: 24rpx;
  float: left;
  margin-right: 16rpx; 
}
.p-server-icon{
  width: 46rpx;
  height: 46rpx;
  vertical-align: middle;
  margin-right: 4rpx;
}

/* <!-- 个人消息/信息 --> end*/


/* 服务列表 start*/

.server-list{
  margin: 20rpx 8rpx 0 8rpx;
  width: 734rpx;
  white-space: nowrap; 
}
.server-item{
  display: inline-block;
  width: 130rpx;
  height: 170rpx;
  margin: 20rpx;
  padding: 5rpx;
  /* background-color: #ccc; */
}

.server-icon-wrap{
  width: 130rpx;
  height: 130rpx;
  background-color: #ccc;
}
.server-icon{
  width: 130rpx;
  height: 130rpx;
}


.server-name{
  width: 130rpx;
  height: 40rpx;
  font-size: 30rpx;
  text-align: center;
}

/* 服务列表 end*/

/* // 提出需求 start*/

.suggestion{
  margin:0 50rpx;
}

.suggestion-title{
  text-align: center;
  font-size: 50rpx;
  font-weight: bold;
}

.suggestion-content{
  font-size: 30rpx;
  width: 90%;
  height: 230rpx;
  border: 1rpx solid #ccc;
  padding: 5%;
}

.rich-rule, .rich-submit{
  display: inline-block;
  margin-top: 20rpx;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
/* 致富规则按钮 */
.rich-rule{
  background-color: #fff;
}
/* 提交按钮 */
.rich-submit{
  float: right;
  width: 300rpx;
  /* background-color: #eee */
}

.rule-content{
  position: absolute;
  width: 560rpx;
  height: 860rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border: 2rpx solid #999;
  text-align: center;
  background-color: #fff; 
  z-index: 100;
}
/* // 提出需求 end*/


/* 弹出框的样式  start*/
.rule-title{
  width: 100%;
  font-size: 60rpx;
  font-weight: bolder;
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 4rpx solid #999;
}
.rule-policy{
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 40rpx 0;
  height: 60%;
}
.policy-item{
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #666
}
.close{
  display: inline-block;
  width: 240rpx;
  margin-top: 80rpx;
  background-color: #fff;
  border: 1rpx solid #222;
}
/* 弹出框的样式  end*/
