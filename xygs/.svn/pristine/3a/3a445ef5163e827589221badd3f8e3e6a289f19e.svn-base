/*按钮操作  */
.poverty-button{
  position: absolute;
  top: 0rpx;
  right: -160rpx;
}
/*下部背景*/
.poverty-content{
  background-color: #F4F4F4;
  width: 730rpx;
  height:1140rpx;
  margin: 0 auto;  
}
/*白皮书标题*/
.poverty-writeBook-title{
  padding-top: 20rpx;
  
  font-style: normal;
  font-weight: 400;
  font-family: 'Arial Negreta', 'Arial Normal', 'Arial';
  color: #000;
  display: flex;
  justify-content: center;
  margin: 20rpx 0 20rpx 0;
}
/*白线  */
.line-css{
    height: 2rpx;
    background: #fff;
    width: 620rpx;
    margin: 0 auto 20rpx;
}
/*政策内容  */
.poverty-subcontent{
  width: 610rpx;
  height: 1020rpx;
  background-color: #fff;
  box-shadow: 10rpx 10rpx 10rpx rgba(-10rpx, 0, 0, 0.349019607843137);
  color: #000;
  margin: 0 auto;
  text-align: left;
}
/*规定条目*/
.poverty-writeBook-details.choice:first-child{ 
  box-shadow:0 -8rpx 0 #e6e6e6; 
}
/*显示白皮书中所有的政策  */
.poverty-writeBook-details{
  width: 610rpx;
  background-color: #fff;  
 
  color: #000;
  margin: 0 auto;
  padding: 35rpx 0;
  border-bottom: 4rpx dashed #e6e6e6;  
  padding-left: 16rpx; 
}
/*查看更多  */
.show_more{
  color: #fff;
  display:flex;
  justify-content: center;
}