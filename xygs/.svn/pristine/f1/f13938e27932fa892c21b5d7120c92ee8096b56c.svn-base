/* pages/mine/integration/integretion.wxss */
#integ{
  display: flex;
  flex-direction: row;
  justify-content: space-between; 
  width: 100%;
  height: 300rpx;
  background-color:rgb(24, 158, 216);  
}
#integ-left{
  flex-grow: 1;
  position: relative;
}
#integ-center{
  flex-grow: 2;
  position: relative;
}
#integ-right{
  flex-grow: 1;
  position: relative;
}  
#integ-img{
  position:relative;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  width:110rpx;
  height:110rpx;
}
 #integ-center-box{
  position:relative;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  width: 300rpx;
  height:84rpx;
  background-color:#fff;
  text-align: center;
  line-height: 84rpx;
} 
#integ-right-box{
  width: 150rpx;
  height:84rpx;
  background-color:#fff;
  position:relative;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  text-align: center;
  line-height: 84rpx;
  font-size: 32rpx;
}
#integ-mid{
  margin: 150rpx 45rpx;
  font-size: 32rpx;
}
#integ-mid-textb{
  margin-top: 20rpx;
  font-size: 28rpx;
}
#integ-bottom{
  margin: 45rpx 45rpx;
  font-size: 32rpx;
}
#integ-bottom-textb{
  margin-top: 20rpx;
  font-size: 28rpx;
}