/* pages/order/order.wxss */
Page{
    background-color: #ddd;
    height: 100%;
}
.header{
    position: fixed;
    width: 100%;
    z-index: 100;
    background-color: #ddd;
    font-size: 15px
}
.header-region{
    width: 100px;
    display: inline-block;
}
.header picker{
    width: 200px;
    height: 25px;
    text-align: center;
    background-color: #fff;
    margin-left: 20px;
    border-radius:5px; 
    display: inline-block;
    margin-top: 5px;
}

.header .kind{
    margin-top: 10px;
    background-color: #fff;
}
.header .kind button{
    width: 54px;
    display: inline-block;
    height: 30px;
    font-size: 10px;
    margin-left: 10px;
    line-height: 30px;
    text-align: center;
    border-radius:20%;
    margin-top: 4px;
}
.select{
    background-color: rgba(22, 155, 213, 1);
}
.clear{
    content: "";
    display: inline-block;
    clear: both;
}
.order {
    width: 100%;
    height: 300px;
    position: absolute;
    top: 89px;
    overflow: hidden;
    padding-left: 5px;
}
.order .order-message{
    height: 100px;
    background-color: #fff;
    margin-bottom: 10px;
    font-size: 15px;
    color: rgba(41, 37, 37, 0.466);
    width: 95%;


}
.order-left{
    float: left;
    
}
.order-right{
    float: right;
}
.order-header{
    width: 100%;
    border-bottom: 1px dashed #ddd;
}






.footer{
    background-color: #fff;
    font-size: 14px;
    position: fixed;
    width: 100%;
    bottom: 0;
}
.footer .member{
    margin: 0 auto;
    text-align: center;
}
.member{
    width: 200px;
    background-color: rgba(22, 155, 213, 1);
    border-radius :5px;
}

.message{
    border-bottom: 2px dashed #ddd;
    margin-bottom: 5px;
}
.message text{
    margin-left: 10px;
}
.Situation text{
    margin-left: 60px;
}
.Situation-a,.Situation-b{
    margin-top: 5px;
    width: 150px;   
    display: inline-block;
    
}
.Situation-a{
    margin-left: 10px;
}
.Situation-b{
    border-left: 2px dashed #ddd;
    padding-left: 15px;
    margin-left: 15px;
}








.mask{
    width: 100%;
    height: 100%;
    background-color:rgba(83, 45, 83, 0.295);
    position: absolute;
    top: 0;
    bottom: 0;
    position: fixed;
}
.mask .introduce{
    width: 300px;
    height: 350px;
    margin: 0 auto; 
    background: #fff;
    color: #000;
    position: relative;
    text-align: center;
    top: 100px;
    box-shadow: 5px 5px 5px #ddd; 
    border-radius: 10px;  
    
}
.mask .introduce button{
    position: relative;
    width: 130px;
}