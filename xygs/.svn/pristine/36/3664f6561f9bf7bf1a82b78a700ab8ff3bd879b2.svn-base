.header{
  height: 400rpx;
  /* background: #f00; */
  position: relative;
  margin-bottom: 80rpx;
}
.header-back{
  margin-top: 40rpx;
  margin-left: 40rpx;
}
.logo{
   width: 200rpx;
   height: 200rpx;
   position: absolute;
   background: #fff;
   border-radius: 100rpx;
   top: 50%;
   margin-top: -100rpx;
   left: 50%;
   margin-left: -100rpx;
}
.logo image{
    width: 200rpx;
   height: 200rpx;
   border-radius: 100rpx;
}
.phone{
  /* display: -webkit-flex; */
  height: 48rpx;
  font-size: 28rpx;
  margin: 0 auto;
  /* margin-bottom: 80rpx; */
  color: #333333;
  position: relative;
}
.phone-num input{
  margin-left: 80rpx;
  width: 400rpx;
  border: 1px solid #c3c3c3;
  margin-right: 22rpx;
}
.phone-num button{
  width: 180rpx;
   position: absolute; 
   top: 0;
    right: 80rpx;  
  font-size: 22rpx;
}
.code{
  /* width: 600rpx; */
  /* border: 1px solid #c3c3c3; */
  margin-top: 80rpx;
}
.code input{
   width: 600rpx; 
  border: 1px solid #c3c3c3;
  /* margin: 0 auto; */
  margin-left: 80rpx;
}
.btn{
  margin-top: 160rpx;
  width: 300rpx;
  margin: 236rpx;
}
.btn button{
  margin-bottom: 40rpx;
}
