/* pages/free/free.wxss */
.searchbox{
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #7fc7a1;
}
.search{
  width: 710rpx;
  border:5rpx solid #fff;
  border-radius:20rpx;  
  display: inline-block;
}
.box{
  position: relative;
}
.swiper{
  height: 260rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.header{
  text-align: center;
  position: absolute;
  top:0;
  left: 50%;
  transform: translateX(-50%);
}
.ordericon{
  width: 246rpx;
  height: 54rpx;
}
.bigChoose{
  display: flex;
  text-align: center  
}
.kind,.area{
  flex-grow:1;
}
.bigicon{
  width: 124rpx;
  height: 124rpx;
}
.swiper-tab{
  display: flex;
  text-align: center;
}
/* .recommand,.immediate,.history,.sell,.buy{
  flex-grow:1; 
  width: 84rpx;
} */
.smalltext{
  width: 84rpx;
  font-size: 30rpx;
  display: inline-block;
}
.icon{
  width: 84rpx;
  height: 84rpx;
}
.publish{
  position: fixed;
  bottom: 100rpx;
  right:20rpx;
  z-index: 10;
}
.publishicon{
  width:128rpx;
  height: 128rpx;
}
.message-buy,.message-sell{
  width: 100%;
  border-top:15rpx solid #eee;
  height: 310rpx;
}
.mesheader{
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 100rpx;
}
.sbkind,.sbprice{
  height: 100rpx;
}
.iconsellbuy{
  width: 51rpx;
  height: 52rpx;
  line-height: 52rpx;
  margin: 21rpx;
  float: left;
}
.meskind{
  font-size: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block; 
}
.icon-bprice{
  width: 33rpx;
  height: 34rpx;
  line-height: 34rpx;
  margin: 33rpx 10rpx 33rpx 33rpx;
  float: left;
}
.mes-bprice,.mes-sprice{
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block; 
  margin-right: 21rpx;
}
.mes-bprice{
  color:#7fc7a1;
}
.mes-sprice{
  color: #3fc1f5;
}
.mescontent{
  border-top: 3rpx solid #eee;
  margin: 0 21rpx; 
  height: 207rpx;
  display: flex;
  flex-direction: column;
}
.mctop,.mcmid,.mcbottom{
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
}
.mcbright{
  display: flex;
  align-items: center;
}
.mes{
  font-size: 28rpx;
}
.mestext{
  font-size: 28rpx;
  color:#8c8c8c;
}
.onlinebuy{
  width: 218rpx;
  height: 60rpx;
}
.personal,.realname,.time{
  width: 36rpx;
  height: 36rpx;
  margin: 12rpx;
}
.time{
  float: left;
}

.tab-item { 
width: 33.3%; 
text-align: center; 
font-size: 15px; 
color: #777; 
} 

