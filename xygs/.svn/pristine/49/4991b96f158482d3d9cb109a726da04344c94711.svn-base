/* pages/help/helpmore/helpmore.wxss */
/* 顶部栏 */
.nav-text{
  width: 100%;
  height: 125rpx;
  background-color: rgba(22,155,213,1);
  font-size: 24px;
  font-weight: 700;
  color: #fff;
  text-align: center;
}
/* 扶贫政策白皮书 */
.content{
  width: 100%;
  height: 45  0rpx;
  border: 2rpx #ccc solid;
}
.content-btn{
  color: #ff0000;
  text-align: center;
  font-size: 20px;
  font-weight: 700;
}
.content-more{
  width: 40%;
  background-color: #000;
  color: #fff;
}
/* 扶贫方案 */
.program-btn button{
  float:left;
  width: 50%;
  height: 80rpx;
  background-color: #ccc;
}
.section__title{
  border-bottom:2px  #ccc solid;
}
.picker{
  text-align: center;
}
.picker text{
  float:right;
  background-color:rgba(22,155,213,1);
  color: #fff;
}
.program{
  height: 500rpx;
} 
.program-ok1,.program-ok2,.program-ok3{
  border-bottom:2px  #ccc solid;
  width:100%;
  position: relative;
}
.program-con1,.program-con2,.program-con3{
  width: 500rpx;
  height: 160rpx;
  display: block;
}
.program-more1,.program-more2,.program-more3{
  width: 200rpx;
  position: absolute;
  right: 0;
  bottom:0rpx;
}