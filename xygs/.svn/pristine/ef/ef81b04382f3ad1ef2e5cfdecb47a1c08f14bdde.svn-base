/* pages/mine/recIntent/recIntent.wxss */
@import '../common/common.wxss';
page{
  background-color: #efefef;
}
view{
  font-size: 28rpx;
}
.intention{
  margin-top: 20rpx;
  background-color: #fff;
  padding: 30rpx 40rpx;
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;  
}
.myButton{
  background-color: #1195db;
  color: #fff;
}
/*image*/
image{
  margin: 4rpx;
}
.mark{
  width: 36rpx;
  height: 36rpx;
}
.online{
  width: 180rpx;
  height: 50rpx;
}
.buy{
  width: 52rpx;
  height: 52rpx;
}
.time image{
  width: 36rpx;
  height: 32rpx;
}
.image-wrapper image{
  vertical-align: middle;
}
.image-wrapper view{
  display: inline-block;
}
.i-i-marks image{
 vertical-align: middle;
}
/*intention-sponsor start*/
.i-s-up,.i-s-down{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.i-s-left{
  flex-grow: 1;
}
.i-s-left image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #ccc;
}
.i-s-center{
  flex-grow: 1;
}
.i-s-right{
  flex-grow: 1;
  border-left: 2rpx solid #ccc;
}
.i-s-right button{
  margin-left: 30rpx;
}
.i-s-name{
  font-size: 46rpx;
}
/*intention-sponsor end*/
/*intention-item start*/
.i-i-title,.i-i-detail{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.i-i-title{
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 20rpx;
}
.i-i-left{
  flex-basis: 2;
}
.i-i-right{
  flex-basis: 1;
}
.i-i-name{
  display: inline;
}
.i-i-price{
  color: #87c38f;
}
.notice{
  font-size: 24rpx;
  padding: 0;
  color: #ccc;
  margin: 20rpx 0;
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;  
}
.time view{
  color: #ccc;
}
/*intention-item end*/
::-webkit-scrollbar{
  width: 0;
  height: 0;
}