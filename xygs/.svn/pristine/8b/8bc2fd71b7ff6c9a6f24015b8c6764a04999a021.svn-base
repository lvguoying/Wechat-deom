<!--pages/mine/recIntent/recIntent.wxml-->
<import src='../common/empty.wxml' />

<view id='recIntent'>
  <block wx:if='{{intention.length==0}}'>
    <template is='empty' data="{{text:'您的数据是空哒~'}}" />
  </block>
  <block wx:else>
    <view class='intention'>
      <view class='intention-sponsor'>
        <view class='i-s-up'>
          <view class='i-s-left'>
            <image src='../../../../mock/images/personalImg.png' mode='center'></image>
          </view>
          <view class='i-s-center'>
            <view class='i-s-name'>张三</view>
            <view class='i-s-business'>综合经营</view>
          </view>
          <view class='i-s-right'>
            <button type='primary' size='mini'>查看详细</button>
          </view>
        </view>
        <view class='i-s-down'>
          <view class='image-wrapper'>
            <image src='../../../../mock/images/index_40.png' class='mark'></image>
            <view>个人</view>
          </view>
          <view class='image-wrapper'>
            <image src='../../../../mock/images/index_41.png' class='mark'></image>
            <view>实名认证</view>
          </view>
          <view class='image-wrapper'>
            <image src='../../../../mock/images/empty.png' class='mark'></image>
            <view>无央会员</view>
          </view>
          <button size='mini' type='primary'>和ta联系</button>
        </view>
      </view>
      <view class='intention-item'>
        <view class='notice'>关注了您的</view>
        <view class='i-i-title'>
          <view class='i-i-left image-wrapper'>
            <image src='../../../../mock/images/index_19.png' class='buy'></image>
            <view class='i-i-name'>玉米</view>
          </view>
          <view class='i-i-right'>
            <view class='i-i-price'>￥1400元/吨</view>
          </view>
        </view>
        <view class='i-i-detail'>
          <view class='i-i-left'>
            <view>品牌：东北玉米</view>
            <view>交货地：黑龙江省哈尔滨市...</view>
            <view class='i-i-marks'>
              <image src='../../../../mock/images/index_59.png' class='online'></image>
              <image src='../../../../mock/images/index_40.png' class='mark'></image>
              <image src='../../../../mock/images/index_41.png' class='mark'></image>
            </view>         
          </view>
          <view class='i-i-right'>
            <view>数量：1000吨</view>
            <view>规格：水分1.0</view>
            <view class='image-wrapper'>
              <image src='../../../../mock/images/index_48.png' class='time'></image>
              <view>今天15：19</view>
            </view>           
          </view>         
        </view>        
      </view>
    </view>
  </block>
</view>
