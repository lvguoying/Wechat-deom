/* pages/help/showMore/showMore.wxss */
/*背景  */
.show-container{
  width: 710rpx;
  height: 1140rpx;
  background-color: #F4F4F4;
  padding-top: 20rpx;
  margin: 20rpx auto;
}
/*顶部横线  */
.line-css{
    height: 1px;
    background: #fff;
    margin: 0 60rpx 30rpx;
}
.show-details.choice{
  box-shadow:0 -8rpx 0 #e6e6e6;
}
/*显示白皮书中所有的政策  */
.show-details{
  width: 610rpx;
  background-color: #fff; 
  font-size:24rpx;
  color: #000;
  margin: 0 auto;
  padding: 35rpx 0;
  border-bottom: 2rpx solid #e6e6e6;
  box-shadow: 0 2rpx 0 0 #e6e6e6 inset;
}
/*底部按钮  */
.button-iknow{
  width:220rpx; 
  height:38rpx; 
  line-height: 38rpx;
  background-color: rgb(94, 198, 173);
  font-size: 30rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  margin: 100rpx auto 0;
  border-radius: 80rpx;
}