/* pages/order/order.wxss */
Page{
    background-color: #ddd;
    height: 100%;
    margin: 0;
    padding: 0;
}
.header{
    position: fixed;
    width: 100%;
    z-index: 100;
    background-color: #ddd;
    font-size: 30rpx;
}
.header-region{
    width:200rpx;
    display: inline-block;
}
.header picker{
    width: 400rpx;
    height:50rpx;
    text-align: center;
    background-color: #fff;
    margin-left: 40rpx;
    border-radius:10rpx; 
    display: inline-block;
    margin-top: 10rpx;
}

.header .kind{
    margin-top: 20rpx ;
    background-color: #fff;

}
.header .kind button{
    width: 80rpx;
    display: inline-block;
    height: 80rpx;
    font-size: 20rpx;
    margin-left: 40rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius:50%;
    margin-top: 8rpx;
}
.header .kind image{
    width: 30rpx;
    height: 48rpx;
    display: inline-block;
    position: absolute;
    top: 0rpx;
    left: 26rpx;

}
.header .kind text{
    position: absolute;
    top: 28rpx;
    left: 20rpx;
}   
.select{
    background-color: rgba(22, 155, 213, 1);
}
.clear{
    content: "";
    display: inline-block;
    clear: both;
}
.order {
    width: 100%;
    height: 600rpx;
    position: absolute;
    top: 194rpx;
    overflow: hidden;
    background-color: #fff;
}
.order image{
    width: 60rpx;
    height: 40rpx;
    display: inline-block;
    position: absolute;
    left: 0;

}
.order .order-message{
    height: 200rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    color: rgba(41, 37, 37, 0.466);
    width: 95%;
    margin: 10rpx auto;



}
.order-footer {
    position: absolute;
    left: 140rpx;
}
.order-footer text{
    position: absolute;
    left: -90rpx;
    color: #000000;
}
.order-footer image{
    width: 30rpx;    
    height: 30rpx;
    position: absolute;
    left: -128rpx;
    color: #fff;
}
.order-left{
    float: left;
    position: absolute;
    left: 80rpx;
    color: #000;
    
}

.order-right{
    float: right;
}
.order-header{
    width: 100%;
    border-bottom: 2rpx dashed #ddd;
}
.soild{
    height:14rpx;
    width:762rpx;
    background-color:#ddd;
    position:absolute;
    left:-148rpx;
    bottom:-23rpx;
    box-shadow: 2rpx 2rpx 2rpx #ddd
}






.footer{
    background-color: #fff;
    font-size: 28rpx;
    position: fixed;
    width: 100%;
    bottom: 0;
    height: 320rpx;
}
.footer .member{
    margin: 0 auto;
    text-align: center;
}
.member{
    width:280rpx;
    background-color: rgba(112, 204, 145, 1);
    border-radius :60rpx;
    font-size: 31rpx;
    color: #fff;
}
.member image{
    width: 34rpx;
    height: 34rpx;
}
.message{
    margin-bottom: 10rpx;
    height: 70rpx;
    font-size: 25rpx;
    color: #413b3b;    
}

.message text{
    color: #000;
}
.message-a{
    width:314rpx;

}

.message-b{
    width: 314rpx;
    position: absolute;
    right: 40rpx;
    top: 56rpx;
}
.message text{
    margin-left: 20rpx;
}
.Situation{
    font-size: 25rpx;
    position: absolute;
    top:160rpx;
    width: 100%;
}
.Situation view{
    width: 200rpx;
    display: inline-block;
}
.Situation image{
    width: 40rpx;
    height: 40rpx;
}
.Situation-rihgt{
    margin-left: 204rpx;
}
.Situation-left{
    margin-left: 14rpx;
}
.Situation-a,.Situation-b{
    margin-top: 10rpx;
    width: 300rpx;   
    display: inline-block;
    font-size: 20rpx;
    
}
.Situation-a{
    margin-left: 55rpx;
    margin-top: 86rpx;
}
.Situation-b{
    border-left:4rpx dashed #ddd;
    padding-left: 30rpx;
    margin-left: 30rpx;
}








.mask{
    width: 100%;
    height: 100%;
    background-color:rgba(83, 45, 83, 0.295);
    top: 0;
    bottom: 0;
    position: fixed;
    font-size: 30rpx;
}
.mask .introduce{
    width: 600rpx;
    height: 700rpx;
    margin: 0 auto; 
    background: #fff;
    color: #000;
    position: relative;
    text-align: center;
    top: 200rpx;
    box-shadow: 10rpx 10rpx 10rpx #ddd; 
    border-radius: 20rpx;  
    
}
.mask .introduce button{
    position: relative;
    width: 260rpx;
    top: 220rpx
}