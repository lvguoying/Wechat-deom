<view class='home'>
   <view class='basic'>
    <view class='basic-up'>
      <image src='../../../mock/images/rich/avatar.jpg' mode='aspectFill'></image>
    </view>
    <view class='basic-down'>
      <image src='../../../mock/images/rich/avatar.jpg'></image>
      <view class='basic-info'>
        <view class='b-i-title'>名称</view>
        <view class='b-i-info'>XXX</view>
      </view>
      <view class='basic-info'>
        <view class='b-i-title'>手机号</view>
        <view class='b-i-info'>111-1111-1111</view>
      </view>
      <view class='basic-info'>
        <view class='b-i-title'>身份</view>
        <view class='b-i-info'>XXX</view>
      </view>     
    </view>
  </view>
  <view class='marks'>
    <image src='../../../mock/images/index_40.png' class='mark'></image>
    <view>个人</view>
    <image src='../../../mock/images/index_41.png' class='mark'></image>
     <view>实名认证</view> 
    <!-- <image src='../../../mock/images/index_44.png' class='mark'></image> -->
