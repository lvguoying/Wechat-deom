/* <弹窗> */

.modal-mask {
     width: 100%;
     height: 100%;
     position: fixed;
     top: 0;
     left: 0;
     background: #000;
     opacity: 0.5;
     overflow: hidden;
     z-index: 9000;
     color: #fff;
}
.modal-dialog {
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 15%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  font-size: 30rpx;
  color: #333333;
  /* margin-bottom: 80rpx; */
  /* margin: -180rpx 105rpx; */
  /* border-radius: 36rpx; */
}
