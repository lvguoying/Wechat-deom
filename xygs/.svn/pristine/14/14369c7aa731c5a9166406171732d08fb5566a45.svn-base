/* pages/help/helpmore/helpmore.wxss */
/* 扶贫政策白皮书 */
.content{
  width: 100%;
  height: 450rpx;
  border: 2rpx #ccc solid;
}
.content-btn{
  position: relative;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-weight: 600;
  background-color: #e9e9e9;
}
.backhelp{
  position: absolute;
  left: 0;
  top: 50%; 
  margin-top: -50rpx;
}
/*条目  */
.poverty-writeBook-details{
  height: 80rpx;
  line-height: 80rpx;
}
.content-more{
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
/* 加入扶贫 */
.join{
  width: 82rpx;
  height: 82rpx;
  background-color: rgb(158,217,157);
  border: 3rpx #ccc solid;
  border-radius: 50%;
  text-align: center;
  color:aliceblue;
  position: fixed;
  right: 10rpx;
  top:52%; 
  z-index: 4;
}
/* 扶贫方案 */
.program-btn{ overflow: hidden;}
.program-btn button{
  float:left;
  width: 50%;
  height: 80rpx;
  border-radius: 0;
  font-size: 28rpx;
}
/* .button-hover{
  background-color: #ccc;
}
.btn-hover{
  background-color: rgb(22,155,213);
} */
.section__title{
  border-bottom:2px  #ccc solid;
    height: 70rpx;
  line-height: 70rpx;
}
.picker{
  text-align: center;
  position: relative;

}
.picktime{
  position: absolute;
  color: #fff;
  border-radius: 10rpx;
  top:-20rpx;
  right: 20rpx;
  }
.active{
  border-bottom: 2rpx #1AAD19 solid;
  
}
/* 已解决 */
.program-list{
  background-color: rgb(231,231,231);
}
.program-ok1{
  background-color: #fff;
  width:700rpx;
  position: relative;
  margin: 0 auto;
  border:25rpx solid;
  border-color:rgb(231,231,231);
  border-radius: 40rpx;
}
.program-con1{
  width: 500rpx;
  height: 160rpx;
  display: block;
  padding-bottom:10rpx;
}
.program-ok1:nth-child(2),.program-ok1:nth-child(3){border-top:0}
.program-con1 view{
  padding-bottom: 20rpx;
}
.program-more1 button,.program-more2 button,.program-more3 button{
  position: absolute;
  right: 7rpx;
  bottom:20rpx;
}
/* 未解决 */
.program-false{
  height: 600rpx;
  background-color: rgb(231,231,231);
  position: relative
}
.pro-con{
  border-radius: 20rpx;
  background-color: #fff;
  overflow: hidden;
  position: absolute;
  top:20rpx;
  left: 20rpx;
  right: 20rpx;
  bottom:20rpx;
}
.program-no{
  float:left;
  display: flex;

  width: 700rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  box-shadow:0 4rpx 0 0 #ccc;
}
.program-no .name{
  width: 55%;
  font-weight: 400;
  color:#000;
}
.time{
  flex: 1;
}
/* 加入扶贫 */
.mask{
  position: fixed; 
  width: 610rpx;
  height: 400rpx;
  top:30%;
  left: 70rpx;
  background-color: rgb(249,249,249);
  border-radius: 20rpx;
  z-index: 3;
}
.mask-f,.mask-s{
  width: 120rpx;
}
.mask-code{
  overflow: hidden;
  width: 420rpx;
  margin: 90rpx auto 40rpx;
  /* margin: 90rpx 90rpx 40rpx 90rpx; */
}
.mask-name{
  overflow: hidden;
  width: 420rpx;
  margin: 0 auto 40rpx;

}
.verify button{
  width: 190rpx;
  height: 50rpx;
  background-color: #1AAD19;
  color: #fff;
  line-height: 50rpx;
}
.mask-code view{
   float:left; 
}
.mask-name view{
    float:left;
}
.mask view{

}
.join-code,.joincodeInputc,.joincodeInputn{
  border:4rpx  rgb(231,231,231) solid; 
  border-radius: 10rpx;
  width: 292rpx;
  height: 52rpx;
  
  box-shadow: -2rpx -2rpx 2rpx  rgb(231,231,231) ;
}
.join-code{color: rgb(231,231,231);}
.joincodeInputc,.joincodeInputn{color: #000;}
.mask .close{
  position: absolute;
  right: 0;
  top: 0;
  height: 60rpx;
  line-height: 60rpx;
  width: 60rpx;
  color: #1AAD19;
  font-size: 60rpx;
}