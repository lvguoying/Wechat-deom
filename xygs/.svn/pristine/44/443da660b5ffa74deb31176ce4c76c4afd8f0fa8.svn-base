/* pages/help/help.wxss */
/*选择地区*/
.poverty-section{
  width: 580rpx;
  position: relative;
  top: 10rpx;
}
.poverty-picker{
  background-color: #fff;
  text-align: center;
  border:2rpx solid rgba(121, 121, 121, 1);
}
/*按钮操作  */
.poverty-button{
  position: absolute;
  top: 5rpx;
  right: -180rpx;
  background-color: #2aa7de;
  color: #fff; 
  width: 160rpx;
  height: 40rpx;
  font-size: 24rpx;
  line-height: 40rpx;  
  border-radius: 10%;
}
/*下部背景*/
.poverty-content{
  background-color: #F4F4F4;
  width: 730rpx;
  height:1140rpx;
  margin: 0 auto;  
}
/*白皮书标题*/
.poverty-writeBook-title{
  padding-top: 20rpx;
  font-size: 30rpx;
  font-style: normal;
  font-weight: 400;
  font-family: 'Arial Negreta', 'Arial Normal', 'Arial';
  color: #000;
  display: flex;
  justify-content: center;
  margin: 20rpx 0 20rpx 0;
}
/*白线  */
.line-css{
    height: 1px;
    background: #fff;
    width: 620rpx;
    margin: 0 auto 20rpx;
}
/*政策内容  */
.poverty-subcontent{
  width: 610rpx;
  height: 1020rpx;
  background-color: #fff;
  box-shadow: 10rpx 10rpx 10rpx rgba(-10rpx, 0, 0, 0.349019607843137);
  font-size:30rpx;
  color: #000;
  margin: 0 auto;
  text-align: left;
}
/*规定条目*/
.poverty-writeBook-details{
  box-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, 0.05);
}
.poverty-writeBook-details.choice{
  box-shadow:0 -8rpx 0 #e6e6e6;
}
/*显示白皮书中所有的政策  */
.poverty-writeBook-details{
  width: 610rpx;
  /* background-color: #fff;  */
  font-size:24rpx;
  color: #000;
  margin: 0 auto;
  padding: 35rpx 0;
  border-bottom: 2rpx solid #e6e6e6;
  box-shadow: 0 2rpx 0 0 #e6e6e6 inset;
}
/*查看更多  */
.show_more{
  width:220rpx; 
  height:38rpx; 
  line-height: 38rpx;
  background-color: rgb(94, 198, 173);
  font-size: 30rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  margin: 40rpx auto 0;
  border-radius: 80rpx;
}