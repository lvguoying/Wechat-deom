.section__title{
  border-bottom:2px  #ccc solid;
}
.picker{
  text-align: center;
}
.picker view{
  float:right;
  background-color:rgb(22,155,213);
  color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  width: 130rpx;
  top:50%;
  margin-top: 10rpx;
}
.active{
  background-color: #2aa7de;
  color:#fff; 
}
.program-list{
  background-color: #ccc;
}
.program-ok1,.program-ok2,.program-ok3{
  background-color: #fff;
  width:700rpx;
  position: relative;
  margin: 0 auto;
  border:25rpx #ccc solid;
  border-radius: 40rpx;
}
.program-ok2{
  border-top: 0;
}
.program-ok3{
  border-top: 0;
}  
.program-con1 ,.program-con2,.program-con3{
  width: 500rpx;
  height: 160rpx;
  display: block;
  font-size: 28rpx;
  padding-bottom:10rpx;
}
.program-con1 view,.program-con2 view,.program-con3 view{
  padding-bottom: 20rpx;
}
.program-more1 button,.program-more2 button,.program-more3 button{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  position: absolute;
  right: 7rpx;
  bottom:20rpx;
  background-color: rgb(94,198,173);
  color:#fff;
}