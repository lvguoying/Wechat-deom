/* pages/help/helpmore/helpmore.wxss */
/* 扶贫政策白皮书 */
.content{
   position: relative;
  width: 100%;
  height: 450rpx;
  border: 2rpx #ccc solid;
}
.content-btn{
  color: #2aa7de ;
  text-align: center;
  font-size: 40rpx;
  font-weight: 400;
}
.content-more{
  width: 30%; 
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgb(94,198,173);
  border-radius:50rpx;
  font-size: 30rpx;
  color: #fff;
}
/* 加入扶贫 */
.join{
  width: 100rpx;
  height: 100rpx;
  font-size: 36rpx;
  background-color: rgb(184,205,238);
  border: 3rpx #ccc solid;
  border-radius: 50%;
  text-align: center;
  color:aliceblue;
  position: absolute;
  right: 0;
  bottom:0; 
  z-index: 2;
}
/* 扶贫方案 */
.program-btn button{
  float:left;
  width: 50%;
  height: 80rpx;
  border-radius: 0;
}
