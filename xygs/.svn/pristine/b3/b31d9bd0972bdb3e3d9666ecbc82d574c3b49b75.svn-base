/* pages/rich/rich.wxss */

@import "./myrich/myrich.wxss";


.navbar{
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  right: 0;
}

/* glorylist start  */
 .detail .fontColor{
   color: #c0c0c0;
 }
  .detail .fontColor text{
   color: #2f4f2f;
 }
 .detail .name{
    font-size: 36rpx
 }
 .detail .place{
    font-size: 30rpx;
 }
 .detail .time{
   font-size: 26rpx;
 }
.scrollList{
    background-color: #c0c0c0;
}

.glorylist{
  margin-top: 75rpx;
}

.glorylist .flex-wrap{
  display: -webkit-flex;
}
.glorylist .region{
  width: 750rpx;
  margin-bottom: 4rpx;
  margin-top: 4rpx;
  padding-bottom: 20rpx;
  padding-top:20rpx; 
  background-color: white;
}
.picker{
     display: flex;
     flex-direction: row;
     color: #333333;
     font-size: 28rpx;
}
.selectRegion{
     line-height: 60rpx;
     margin-right: 8rpx;
     margin-left: 8rpx;
}
.comm{
     border: 1px solid #333333;
     margin-right: 20rpx;
     border-radius: 10rpx;
      width: 180rpx; 
      height: 60rpx;
      line-height: 60rpx;
     text-align: center;
}
.glorylist .headPhoto{
  padding: 20rpx;
  width: 130rpx;
  height: 130rpx; 
}
.glorylist .detail{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-top:20rpx; 
  flex: 1;
}
.glorylist .richBox{
  margin-top: 4rpx;
  margin-bottom: 4rpx;
  background-color: white;
  height: 190rpx;
}
/* .glorylist .richBox image{
  padding:10rpx;
} */

/* glorylist end  */
/* topbar  begin*/
 
.navbar{  
  flex: none;  
  display: flex;  
  background: #ffffff;  
  color: black;
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
}  
.navbar .item.active{  

  color:#ff7f00;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
   height: 4rpx;  
  background: #ff7f00;   
}  
/* topbar  end*/

.myrich{
  margin-top: 100rpx;
}


