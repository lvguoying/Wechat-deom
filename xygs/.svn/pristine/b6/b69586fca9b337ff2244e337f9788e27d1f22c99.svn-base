/* pages/mine/home/home.wxss */
view{
  font-size: 32rpx;
}
/*basic start*/
.basic{
  border-bottom: 2rpx solid #ccc;
}
.basic-up{
  width: 100%;
  height: 300rpx;
}
.basic-up image{
  width: 100%;
  height: 100%;
}
.basic-down{
  position: relative;
  bottom: 50rpx;
  padding: 0 80rpx;
}
.basic-down image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.basic-info{
  display: flex;
}
.b-i-title{
  width: 200rpx;
  flex-grow: 1; 
}
.b-i-info{
  width: 300rpx;
  flex-grow: 1; 
  color: #ccc;
}
/*basic end*/
/*marks start*/
.marks{
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
  padding: 10rpx 0 10rpx 80rpx;
  margin: 20rpx 0;
}
.marks view{
  display: inline-block;
  font-size: 28rpx;
  margin-right: 10rpx;
}
.mark{
  width: 36rpx;
  height: 36rpx;
  margin: 4rpx;
  vertical-align: middle; 
}
/*marks end*/
/*detail start*/
.detail{
  height: 440rpx;
  padding-left: 80rpx;
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
}
.detail-info{
  margin: 20rpx 0;
}
.detail-info image{
  width: 80%;
}
.d-i-cont{
  color: #ccc;
}
/*detail end*/
/*bottom start*/
.bottom{
  width: 100%;
  height: 100rpx;
  background-color: #ccc;
  position: absolute;
  bottom: 0;
  display: flex;
  font-size: 36rpx;
  text-align: center;
  line-height: 100rpx;
}
.fellow{
  background-color: #02ffff;
  color: white;
  flex-grow: 1;
}
.call{
  background-color: #1195db;
  color: white;
  flex-grow: 1;
}
/*bottom end*/