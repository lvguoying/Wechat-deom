/* pages/rich/search/search.wxss */
.search-box{
  display: flex;
  margin-top: 20rpx;
  margin-left: 45rpx;
  align-items: center;
}
.searchbox{
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  display: flex;
  align-items: center;
}
.search{
  width: 520rpx;
  height: 60rpx;
  border:5rpx solid #7fc7a1;
  border-radius:20rpx;  
  display: inline-block;
}

.btn-search{
   width: 120rpx; 
   height: 70rpx;
   font-size: 28rpx; 
   line-height: 70rpx;
   color: #7fc7a1;
   margin: 0;
}
.btn-search::after{
   border: 6rpx solid #7fc7a1;
}
.history{
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  position: relative;
  margin-top: 20rpx;
  margin-left: 45rpx;
  width: 660rpx;
}
.history-search{
  font-size: 32rpx;
}
.history-record{
      width: 628rpx;
      margin-left: 60rpx;
      margin-top: 16rpx; 
      font-size: 28rpx;
      display: flex;
      flex-direction: row;
}
.history-comm{
      padding: 10rpx;
      background: rgb(223,224,226);
      margin-right: 16rpx;
      border-radius: 14rpx;
      font-size: 28rpx;
}
.delete{
  position: absolute;
  right: 16rpx;
  font-size: 32rpx;
}
.hot{
  margin-top: 100rpx;
  color: #333333;
  font-size: 32rpx;
  margin-left: 45rpx;
}
.hot-search{
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  color: #333333;
  margin-left: 60rpx;
  margin-top: 16rpx;
  width: 660rpx;
}
.corns{
  background: #e8e8e8;
  height: 60rpx;
  margin-right: 16rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 14rpx;
  font-size: 28rpx;
}
.corn{
  width: 184rpx;
}
.cob{
  width: 128rpx;
}
.wheat{
  width: 100rpx;
}
