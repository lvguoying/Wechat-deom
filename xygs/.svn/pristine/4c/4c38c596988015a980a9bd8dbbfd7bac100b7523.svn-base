/* pages/mine/home/home.wxss */
page{
  background-color: #ccc;
  padding-bottom: 100rpx;
}
view{
  font-size: 32rpx;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
}
/*basic start*/
.basic{
  border-bottom: 2rpx solid #ccc;
  background-color: #fff;
}
.basic-up{
  width: 100%;
  height: 300rpx;
}
.basic-up image{
  width: 100%;
  height: 100%;
}
.basic-down{
  position: relative;
  bottom: 50rpx;
  padding: 0 80rpx;
}
.basic-down image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.basic-info{
  display: flex;
}
.b-i-title{
  width: 200rpx;
  flex-grow: 1; 
}
.b-i-info{
  width: 300rpx;
  flex-grow: 1; 
  color: #ccc;
}
/*basic end*/
/*marks start*/
.marks{
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
  padding: 10rpx 0 10rpx 80rpx;
  margin: 20rpx auto;
  background-color: #fff;
  border-radius: 20rpx;
  width: 86%;
}
.marks view{
  display: inline-block;
  font-size: 28rpx;
  margin-right: 10rpx;
}
.mark{
  width: 36rpx;
  height: 36rpx;
  margin: 4rpx;
  vertical-align: middle; 
}
/*marks end*/
/*detail start*/
.detail{
  /* height: 440rpx; */
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
  background-color: #fff;
}
.detail-info{
  padding: 20rpx 0;
  margin: 0 80rpx;
}
.detail-info image{
  width: 80%;
}
.d-i-cont{
  color: #ccc;
}
/*detail end*/
/*bottom start*/
.bottom{
  width: 100%;
  height: 100rpx;
  background-color: #fff; 
  position: fixed;
  bottom: 0;
  display: flex;
  text-align: center;
  line-height: 100rpx;
}
.fellow{
  color: #1AAD19;
  border: 2rpx solid #1AAD19;
  flex-grow: 1;
  font-size: 32rpx;
  position: absolute;
  width: 40%;
  left: 5%;
  bottom: 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 20rpx;
}
.call{
  background-color: #1AAD19;
  color: white;
  flex-grow: 1;
  font-size: 32rpx;
  position: absolute;
  width: 40%;
  right: 5%;
  bottom: 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 20rpx;
}
/*bottom end*/