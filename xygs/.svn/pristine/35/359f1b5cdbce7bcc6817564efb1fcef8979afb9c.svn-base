    bottom: 0;
    position: fixed;
    font-size: 28rpx;
    z-index: 1000 ;
    }
    .introduction{
    color: #888;
    }
    .introduction view{
    width: 90%;
    margin: 0 auto;
    }
    .mask .introduce{
    width: 600rpx;
    height: 800rpx;
    margin: 0 auto; 
    background: #fff;
    color: #000;
    position: relative;
    top: 152rpx;
    box-shadow: 10rpx 10rpx 10rpx #ddd; 
    border-radius: 20rpx; 
    }
    .compare{
    color: #888;
    width: 90%;
    margin: 0 auto; 
    
    }
    .mask .introduce button{
    position: absolute;
    width: 280rpx;
    color:#7fc7a1;
    border:1px solid #7fc7a1;
    background-color:transparent;
    height: 71rpx;
    line-height: 71rpx;
    left: 150rpx;
    
    
    
    }
    
    .introduce .title{
    width: 100%;
    font-size: 44rpx;
