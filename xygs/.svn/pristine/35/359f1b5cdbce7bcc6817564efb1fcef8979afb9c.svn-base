/* pages/order/order.wxss */
Page{
    background-color: #ddd;
    height: 100%;
    margin: 0;
    padding: 0;
    font-size: 28rpx;
   
}
.header{
    position: fixed;
    width: 100%;
    background-color: #ddd;
    font-size: 30rpx;
}
.header-region{
    width:200rpx;
    display: inline-block;
    font-size: 28rpx;
}

.header .kind{
    background-color: #fff;
    height: 100rpx;
}
.header .kind button{
    width: 80rpx;
    display: inline-block;
    height: 80rpx;
    font-size: 28rpx;
    margin-left: 40rpx;
    line-height: 60rpx;
    text-align: center;
    margin-top: 8rpx;
}
.header .area{
    width: 80rpx;
    display: inline-block;
    height: 80rpx;
    font-size: 28rpx;
    margin-left: 40rpx;
    line-height: 42rpx;
    text-align: center;
    position: absolute;
}
.area image{
    position: absolute;
    right: 250px;
    top: 23rpx;
    width: 30prx;
    height: 48rpx;
}
.header .kind  button image{
    width: 30rpx;
    height: 48rpx;
    display: inline-block;
    position: absolute;
    top: 0rpx;
    left: 26rpx;

}
.header .kind text{
    position: absolute;
    top: 28rpx;
    left: 13rpx;
}   
.select{
    background-color: #7fc7a1;
    color: #fff;
}
.clear{
    content: "";
    display: inline-block;
    clear: both;
}
.order {
    width: 100%;
    height: 924rpx;
    position: absolute;
    top:100rpx;
    overflow: hidden;
    background-color: #fff;
    font-size:28rpx;
}
.order image{
    width: 60rpx;
    height: 40rpx;
    display: inline-block;
    position: absolute;
    left: 0;

}
.order .order-message{
    height: 200rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    color: rgba(41, 37, 37, 0.466);
    width: 95%;
    margin: 25rpx auto;



}
.order-footer {
    position: absolute;
    left: 140rpx;
    font-size: 28rpx;
}
.order-footer text{
    position: absolute;
    left: -90rpx;
    color: #000000;
    font-size: 30rpx;
}
.order-footer image{
    width: 30rpx;    
    height: 30rpx;
    position: absolute;
    left: -128rpx;
    color: #fff;
}
.order-left{
    float: left;
    position: absolute;
    left: 80rpx;
    color: #000;
    
}

.order-right{
    float: right;
}
.order-header{
    width: 100%;
    border-bottom: 2rpx dashed #ddd;
}
.soild{
    height:14rpx;
    width:762rpx;
    background-color:#f8f8f8;
