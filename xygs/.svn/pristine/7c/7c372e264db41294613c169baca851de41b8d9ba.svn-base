/* <!-- 个人消息/信息 --> start*/
.person{
  margin: 20rpx 50rpx 0 50rpx;
  border-bottom: 2rpx solid #ccc;
} 

.person-avatar{
  margin: 0 20rpx 0 10rpx;
  width: 128rpx;
  height: 128rpx;
   border-radius: 10rpx; 
  vertical-align: top;
}
.person-info{
  display: inline-block;
  height: 128rpx;
  margin-left: 10rpx;
  border-left: 2rpx solid #e0e0e0;
  padding-left: 20rpx;
  /* vertical-align: top;   */
}
.person-name{
  padding-bottom: 10rpx;
  font-size: 32rpx;
}
.type{
  font-size: 24rpx;
  color: #ccc;
}
.person-server{
  margin: 20rpx 0;
}
/* 去除浮动 */
.person-server::after{
  content: '';
  clear: both;
  display: block;
  width: 0;
  overflow: hidden;
}
.p-server-item{
  font-size: 24rpx;
  float: left;
  margin-right: 16rpx; 
}
.p-server-icon{
  width: 30rpx;
  height: 30rpx;
  vertical-align: bottom;
  margin-right: 4rpx;
}

/* <!-- 个人消息/信息 --> end*/


/* 服务列表 start*/

.server-list{
  margin: 0rpx 50rpx;
  width: 650rpx;
  white-space: nowrap; 
}
.server-item{
  display: inline-block;
  width: 130rpx;
  height: 170rpx;
  margin: 20rpx 14rpx;
  padding: 5rpx;
  /* background-color: #ccc; */
}

.server-list view:first-child{
  margin-left: 0;
}
.server-list view:last-child{
  margin-right: 0;
}
.server-icon-wrap{
  width: 140rpx;
  height: 140rpx;
  box-sizing: border-box;
}
.server-icon{
  padding: 18rpx;
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid #ccc;
}


.server-name{
  width: 130rpx;
  height: 40rpx;
  padding-top: 6rpx;
  font-size: 26rpx;
  text-align: center;
}

/* 服务列表 end*/

/* // 提出需求 start*/

.suggestion{
  margin:0 50rpx;
}

.suggestion-title{
  text-align: center;
  font-size: 50rpx;
  font-weight: bold;
  color: rgba(255,127,0, 0.7);
}

.suggestion-content{
  margin-top: 20rpx;
  font-size: 30rpx;
  width: 92%;
  height: 230rpx;
  border: 1rpx solid #ccc;
  padding: 4%;
}

.rich-rule, .rich-submit{
  display: inline-block;
  margin-top: 20rpx;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
/* 致富规则按钮 */
.rich-rule{
  background-color: #fff;
}
/* 提交按钮 */
.rich-submit{
  float: right;
  width: 300rpx;
  /* background-color: #eee */
}

.rule-content{
  position: absolute;
  width: 560rpx;
  height: 800rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border: 2rpx solid #999;
  text-align: center;
  background-color: #fff; 
  z-index: 1000;
}
/* // 提出需求 end*/


/* 弹出框的样式  start*/
.rule-title{
  width: 100%;
  font-size: 60rpx;
  font-weight: bolder;
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 4rpx solid #999;
}
.rule-policy{
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 30rpx 0;
  height: 60%;
}
.policy-item{
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #666
}
.close{
  display: inline-block;
  width: 240rpx;
  margin-top: 50rpx;
  background-color: #fff;
  border: 1rpx solid #222;
}
/* 弹出框的样式  end*/
