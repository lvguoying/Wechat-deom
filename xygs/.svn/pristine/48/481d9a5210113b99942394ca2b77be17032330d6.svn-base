/* pages/mine/mine.wxss */
.m{
  height: 100%;
  background: #eee;
}
/* 头部蓝色 mBox */
.mBox{
  height: 300rpx;
  background: rgb(24, 158, 216);
  overflow: hidden;
}
.mMine{
  height: 220rpx;
  width: 90%;
  background: rgb(24, 158, 216);
  margin: 40rpx 4% 40rpx 6%;
  position: relative;
  overflow: hidden;
}
.mImg{
  height: 100%;
  width: 220rpx;
  border-radius: 50%;
  float: left;
  margin-right: 20rpx;
}
.mContent{
  margin: 30rpx 0;
  font-size: 30rpx;
  color: #fff;
}
.mContent view{
  margin: 10rpx 0;
}
.mLogo view{
  width: 40rpx;
  text-align: center;
  margin: 0 10rpx;
  float: left;
  border: 1px solid #0f0;
  color: #0f0;
  background: #fff;
}
.mLogo .mLogo-first{
  margin-left: 0rpx;
}
.mLogin{
  position: absolute;
  right: 0;
  top: 0;
  font-size: 22rpx;
  color: #fff; 
  background: rgb(24, 158, 216);
  border: 2rpx solid #fff;
}

/* 信息 mMsg */
.mMsg{
  display: flex;
  height: 140rpx;
  border-bottom: 1px solid rgb(24, 158, 216);
  background: #fff; 
}
.mMsg view{
  font-size: 30rpx;
  flex: 1;
  text-align: center;
  color: rgb(24, 158, 216);
  line-height: 140rpx;
  border-left: 1px solid rgb(24, 158, 216); 
}
.mMsg .mMsg-first{
  border-left: none;
}
/* 功能 mFun */
.mFun{
  margin-top: 30rpx;
  background: #fff;
}
.mFun view{
  border-top: 1px solid #bbb;
  border-bottom: 1px solid #bbb;
  text-align: center;
  font-size: 32rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.mFun .mFun-middle{
  border: none;
}
.mFun .mFun-last{
  border-bottom: none;
}