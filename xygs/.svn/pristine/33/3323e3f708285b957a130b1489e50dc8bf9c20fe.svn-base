/* pages/rich/search/search.wxss */
.search{
  /* margin-top: 16rpx; */
  /* margin-bottom: 16rpx; */
    display: flex;
    flex-direction: row;
    width: 660rpx;
    margin: 0 auto;  
    padding: 16rpx;
}
.ipt-search{
  width: 530rpx;
  height: 52rpx;
  border: 1px solid #c3c3c3;
  font-size: 24rpx;
  margin-right: 6rpx;
}
.btn-search button{
   width: 120rpx; 
   height: 52rpx;
   font-size: 26rpx; 
   line-height: 52rpx;
   border: 1px solid #c3c3c3;
}
.history{
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  color: #333;
  position: relative;
  margin-top: 20rpx;
  margin-left: 45rpx;
  width: 660rpx;
  /* background: rgb(223,224,226); */
}
.history-search{
  /* margin-left: 16rpx; */
}
.history-record{
      width: 628rpx;
      /* margin: 0 auto; */
      margin-left: 45rpx;
      font-size: 26rpx;
      display: flex;
      flex-direction: row;
}
.history-comm{
      padding: 10rpx;
      background: rgb(223,224,226);
      margin-right: 16rpx;
      border-radius: 14rpx;
}
.delete{
  position: absolute;
  right: 16rpx;
}
.hot{
  margin-top: 100rpx;
  color: #333333;
  font-size: 32rpx;
  margin-left: 45rpx;
}
.hot-search{
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  color: #333333;
  margin-left: 45rpx;
  margin-top: 16rpx;
  width: 660rpx;
}
.corns{
  background: #e8e8e8;
  height: 60rpx;
  margin-right: 16rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 14rpx;
}
.corn{
  width: 184rpx;
}
.cob{
  width: 128rpx;
}
.wheat{
  width: 100rpx;
}
.message-buy,.message-sell{
  width: 100%;
  border-top:15rpx solid #eee;
  height: 310rpx;
}
.mesheader{
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 100rpx;
}
.sbkind,.sbprice{
  height: 100rpx;
}
.iconsellbuy{
  width: 51rpx;
  height: 52rpx;
  line-height: 52rpx;
  margin: 21rpx;
  float: left;
}
.meskind{
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block; 
}
.icon-bprice{
  width: 33rpx;
  height: 34rpx;
  line-height: 34rpx;
  margin: 33rpx 10rpx 33rpx 33rpx;
  float: left;
}
.mes-bprice,.mes-sprice{
  font-size: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block; 
  margin-right: 21rpx;
}
.mes-bprice{
  color:#7fc7a1;
}
.mes-sprice{
  color: #3fc1f5;
}
.mescontent{
  border-top: 3rpx solid #eee;
  margin: 0 21rpx; 
  height: 207rpx;
  display: flex;
  flex-direction: column;
}
.mctop,.mcmid,.mcbottom{
  display: flex;
  justify-content: space-between;
}
.mes{
  font-size: 24rpx;
}
.mestext{
  font-size: 24rpx;
  color:#8c8c8c;
}
.onlinebuy{
  width: 218rpx;
  height: 60rpx;
}
.personal,.realname,.time{
  width: 36rpx;
  height: 36rpx;
  margin: 12rpx;
}
.time{
  float: left;
}