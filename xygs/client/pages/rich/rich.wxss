/* pages/rich/rich.wxss */
@import "./myrich/myrich.wxss";

.navbar {
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
  right: 0;
}

/* glorylist start  */

.varColor{
  color: #777;
}

.detail .place {
  color: black;
}

.detail .name {
  font-size: 32rpx;
  flex: 1;
}

.detail .place {
  font-size: 28rpx;
  color: black;
}

.detail .time {
  font-size: 26rpx;
  flex: 1;
}

.scrollList {
  background-color: #f8f8f8;
}

.glorylist {
  margin-top: 75rpx;
}

.glorylist .flex-wrap {
  display: flex;
}

.regionPlace {
  width: 750rpx;
  margin-top: 25rpx;
  height: 100rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.regionPlace image {
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 60rpx;
  height: 60rpx;
}
.regionPlace text{
  font-size:32rpx; 
}

.glorylist .region {
  height: 90rpx;
  width: 750rpx;


  background-color: white;
}

.picker {
  display: flex;
  flex-direction: row;
  color: #333;
  font-size: 28rpx;
  background-color:#F8F8F8; 
    align-items: center;
}

.selectRegion image{
  width: 180rpx;
  height: 90rpx;
}

.selectRegion {
  line-height: 60rpx;
  margin-right: 8rpx;

}

.comm {

  margin-right: 20rpx;
  border-radius: 10rpx;
  width: 180rpx;
  height: 60rpx;
  text-align: center;
}
 .headPhoto {
   border: 2rpx solid #777;
  margin: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx; 
}
.name-wrap{
  display: flex;
  flex-direction:row; 

}

.glorylist .detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-top: 20rpx;
  flex: 1;
}

 .richBox {

  margin-bottom: 4rpx;
  background-color: white;
  height: 130rpx;
  padding-top:20rpx;
  padding-bottom:20rpx;  
}


.navbar {
  flex: none;
  display: flex;
  background: #7fc7a1;
  color: #fff;
}

.navbar .item {
  position: relative;
  flex: 2;
  text-align: center;
  line-height: 100rpx;
}

.navbar .item.active {
  color: #fff;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 180rpx;
  right: 0;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid #fff;
}

.tabChange{
  position: absolute;
  top:140rpx;
  left:30rpx;

}
/* topbar  end*/

.myrich {
  margin-top: 120rpx;
  position: fixed;
  z-index: 100;
}