/* 服务列表 start*/

.server-list{
  margin: 0rpx 50rpx;
  width: 650rpx;
  white-space: nowrap; 
}
.server-item{
  display: inline-block;
  width: 130rpx;
  height: 170rpx;
  margin: 20rpx 14rpx;
  padding: 5rpx;
  /* background-color: #ccc; */
}

.server-list view:first-child{
  margin-left: 0;
}
.server-list view:last-child{
  margin-right: 0;
}
.server-icon-wrap{
  width: 140rpx;
  height: 140rpx;
  box-sizing: border-box;
}
.server-icon{
  padding: 15rpx;
  width: 110rpx;
  height: 110rpx;
  /* border: 2rpx solid #ccc; */
  border-radius: 50%;
}


.server-name{
  width: 140rpx;
  height: 40rpx;
  font-size: 26rpx;
  text-align: center;
}

