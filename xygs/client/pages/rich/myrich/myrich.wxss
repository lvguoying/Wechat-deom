/* 弹出框的样式  start*/
.a{
  position: fixed;
  display: flex;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  justify-content: center;
  z-index: 1000;
}

.rule-content{
  width: 560rpx;
  /* height: 800rpx; */
  margin-top: 10rpx;
  font-size: 0;
  z-index: 100;
}
.rule-image{
  width: 100%;
  height: 280rpx;
}
.rule-policy{
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  /* margin-top: -10rpx; */
  padding: 30rpx 0;
  height: 400rpx;
  background-color: #fff;
}
.policy-item{
  position: relative;
  margin:0 50rpx;
  padding: 0 0 20rpx 32rpx;
  /* line-height: 60rpx; */
  font-size: 30rpx;
  color: #666;
  border-left: 1rpx solid #7fc7a1;
}
.policy-item-index{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  left: -16rpx;
  top: 8rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #7fc7a1;
  color: #fff;
  border-radius: 50%;
}
.close{
  /* width: 240rpx; */
  background-color: #fff;
  border-top: 1rpx solid #ccc;
  font-size: 40rpx;
  text-align: center;
  color: #7fc7a1;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0 0 5px 5px;
}
.mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4); 
  z-index: 10;
  overflow: hidden;
  
}
/* 弹出框的样式  end*/
