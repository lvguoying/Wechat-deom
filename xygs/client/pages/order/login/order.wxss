/* pages/order/order.wxss */

Page {
    background: #eee;
    font-size: 28rpx;
    overflow: hidden;
  }
  /*头部品类和地区选择模块开始*/
  .header {
    display: flex;
    width: 100%;
    background: #fff;
    font-size: 28rpx;
    font-weight: 600;
    color: #555;
    text-align: center;
    border-top: 2rpx solid #eee;
    margin-bottom: 20rpx;
  }
  .header view{
    flex: 1;
  }
  .header .header-left{
    border-right: 2rpx solid #eee;
  }
  .header .header-left,.header .header-right{
    padding: 10rpx;
  }
  picker view{
    display: inline-block;
  }
  picker .picker{
    padding-left: 20rpx;
  }
  .img{
    width: 60rpx;
    height: 60rpx;
  }
  .img image{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle; 
  }
  
  .header view text{
     vertical-align: middle;  
  }
  .header .kind {
    padding: 20rpx 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .header .kind view {
    width: 90rpx;
    height: 90rpx;
    font-size: 28rpx;
    background:#ddd;
    border-radius: 50%;
  }
  
  .kind image {
    margin: 0rpx auto;
    width: 40rpx;
    height: 40rpx;
    display: flex;
  }
  
  .header .kind text {
    margin-left: 20rpx;
  }
  
  
  /*头部品类和地区选择模块结束*/
  
  /*订单信息展示开始*/
  .order {
    height: 750rpx;
  }
  
  .order image {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
  }
  
  .order .order-message {
    background-color: #fff;
    margin-bottom: 20rpx; 
  }
  .order .order-message:last-child{
    margin-bottom: 0;
  }
  .order-header {
    display: flex;
    margin: auto 20rpx;
    align-items: center;
    padding-top: 20rpx;
    border-bottom: 1rpx solid #eee;
  }
  .order-left {
    font-size: 30rpx;
    margin-left: 20rpx;
    font-weight: 600;
    color: #555;
  }
  .order-right {
    margin-left: 390rpx;
    color: #888888;
  }
  .order-footer {
    margin-top: 20rpx;
    margin-left: 20rpx;
    padding-bottom:20rpx;
    display: flex;
  }
  .footer-left{
    flex: 2;
  }
  .footer-right{
    flex: 1;
    transform: translate(20%,40%);
  }
  .footer-left text {
    margin-left: 14rpx;
  }
  .footer-left .meg{
    color:#888888;
  }
  .footer-left image {
    width: 30rpx;
    height: 30rpx;
    color: #fff;
  }
  .footer-right button{
    background-color: #7fc7a1;
  }
  /*订单信息展示结束*/
  
  
  
  
  .footer {
    background-color: #fff;
    position: fixed;
    width: 100%;
    bottom: 17rpx;
    height: 416rpx;
  
  }
  .footer-meg {
    background-image: url(http://39.107.253.90:60002/20180504155432.png);
    background-size: cover;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .footer-meg image{
    width: 50rpx;
    height: 50rpx;
  }
  .footer-tip{
    width: 320rpx;
    display: flex;
    flex: 1;
    align-items: center;
    color: #fff;
    margin-top: 20rpx;
  }
  .footer-tip image{
    vertical-align: middle;
    margin-right: 10rpx;
  }
  .footer-tip text{
    vertical-align: middle;
  }
  .footer-meg button{
    flex: 1;
    width: 90%;
    height: 100rpx;
    background-color: #7fc7a1;
    color: #fff;
    margin-bottom: 50rpx; 
  }
  .footer .member {
    margin: 0 auto;
    text-align: center;
  }
  
  
  /*遮罩层开始*/
  .mask {
    width: 100%;
    height: 100%; 
    background-color: rgba(83, 45, 83, 0.295);
    top: 0;
    bottom: 0;
    position: fixed;
    font-size: 28rpx;
    z-index: 1000;
    overflow: hidden;
  }
  .introduction {
    color: #888888;
  }
  .introduce image{
    width: 100%;
    height: 370rpx;
  }
  .introduction view {
    margin: 0 auto;
  }
  .mask .introduce {
    width: 580rpx;
    margin: 0 auto;
    /* background: #fff; */
    position: relative;
    top: 152rpx;
  }
  .compare {
    width: 80%;
    margin: 0 auto;
  }
  .int-com{
    background: #fff;
    padding-top: 30rpx;
    margin-top: -40rpx;
    padding-bottom: 20rpx;
    margin-bottom: -20rpx;
  }
  .content {
    color: #888888;
  } 
  .introduce .title {
    width: 100%;
    font-size: 34rpx;
    font-weight: bolder;
  }
  .mask button{
    font-size: 36rpx;
    color: #7fc7a1;
  }
  .header .kind .selectKind{
    background-color: #7fc7a1;
    color: #fff;
  }
  /*遮罩层结束*/
  /*未登录遮罩层  */
  .submask{
    display: flex;
    width: 100%;
    height: 100%;
    background-color: rgba(83, 45, 83, 0.295);
    position: fixed; 
    /* overflow: hidden; */
    z-index: 2;
    justify-content: center; 
  }
  .submask-matter{
    position: fixed;
    top: 50%;
    transform: translateY(-50%);
    background-color: #fff;
    width: 520rpx;
    height: 340rpx;
    border-radius: 20rpx; 
    display: flex;
    flex-direction: column; 
    justify-content: center;
    align-items: center;
  }
  .submask-masker view{
    display: flex;
    align-items: center;
  }
  .submask-matter image{
    width: 100rpx;
    height: 100rpx;
    margin-top: 40rpx; 
  }
  .hint{
    color: #ccc;
    font-size: 30rpx;
    padding: 20rpx 0;
    width: 100%;
    text-align: center;
    border-bottom: 1rpx solid #eee;
  }
  /* 立即注册 */
  .register{
    font-size: 38rpx;
    font-weight: 600;
    color: #555;
    padding: 20rpx;
  }
  .submask-close{
    width: 80rpx;
    height: 160rpx;
    position: fixed;
    top: 21%;
    right: 15%;
    z-index: 2;
  }
  .closebg{
    width: 80rpx;
    height: 80rpx;
    z-index: 3;
    background-color: transparent;
    position: absolute;
    border-radius: 50%; 
    right: 15%;
    top: 21%;
  }