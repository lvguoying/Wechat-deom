/* pages/mine/pubInfor/pubInfor.wxss */
@import '../common/common.wxss';
/* buy_product_detail  start*/
page{
  height: 100%;
  background: #efefef;
}
.buy_product_detail{
  height: 500rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.product_detail_nav{
  height: 75rpx;
  line-height: 75rpx;
  font-size: 30rpx;
}
 .detail_nav_img{
  width: 50rpx;
  height: 50rpx;
} 
.product_detail_nav .group{
  /* width: 30rpx;
  height: 30rpx; */
  float: left;
  margin-right: 40rpx;
}
 .product_detail_name{
  float: left;
  color: #2c2b2b
} 
 .product_detail_price{
  float: right;
  color:red
} 
.product_detail_message{
  font-size: 30rpx;
  margin-top: 40rpx;
}
.product_detail_message view{
  margin-top: 40rpx;
}
.product_detail_time .group{
  float: left; 
}
.product_detail_time{
  float: right; 
  font-size: 30rpx;
  margin-top: 30rpx;
}
/* buy_product_detail  end*/


/* sellers_Information  start */
.sellers_Information{
  height: 320rpx;
  margin: 0 30rpx;
  border-top:5px solid #ddd;
  border-bottom:5px solid #ddd;  
}
.sellers_message{
  height: 170rpx;
  margin-top: 50rpx;
}
 .sellers_message_name{
  width: 50%;
  height: 170rpx;
  border-right: 1px solid #ddd;
  float: left
} 
.sellers_img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  /* margin-left: 40rpx; */
}
.sellers_message_left{
  float: left;
  margin-right: 30rpx;
}
.sellers_message_right{
  height: 75rpx;
  line-height: 75rpx;
  float: left;
}
.sellers_phones{
  width: 48%;
  float: right;
}
.sellers_phones_img{
  width: 100rpx;
  height: 100rpx;
}
.sellers_phones{
  float: left;
  margin-left: 10rpx;
  padding-top: 25rpx;
}
.sellers_phones_left{
  float: left;
  margin-right: 20rpx;
}
.sellers_phones_right{
  float: left
}
.sellers_phones_btn{
  background-color: #3285ff
}
.sellers_Information_auto{
  font-size:30rpx;
}
.sellers_auto_img{
  width:50rpx;
  height:50rpx;
  vertical-align: middle;
}
.auto_message{
  float: left;
  margin-top: 10rpx;
  margin-right: 5rpx;
}
/* sellers_Information  end */


/* recommend_Information start */
.recommend_Information{
  margin-bottom: 20rpx;
  height: 1000rpx;
}
.recommend_title{
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.recommend_category{
  padding-top:14rpx;
  height: 300rpx;
  margin-bottom: 13rpx;
  background:#fff;
}
.recommend_category_title{
  display: flex;
  flex-direction: row ;
  justify-content: space-between; 
}
.category_left_name{
  display: inline-block;
}
.detail_nav_img{
  vertical-align: middle;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.recommend_category_title{
  border-bottom: 1px solid #ccc;
  font-size: 30rpx;
  padding-bottom:5px;
}
.recommend_category_title .category_right{
  color: rgb(112, 204, 154);
  margin-right:20rpx;
}
.recommend_category_message{
  font-size: 27rpx;
  display: flex;
  flex-direction: row ;
  justify-content: space-between; 
}
.category_left_message{
  margin: 30rpx;
}
.category_left_message icon{
  vertical-align: middle
}
.category_line3{
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
}
.category_line3_left{
  margin-right: 40rpx;
}
.category_line3_right image{
  margin-left: 15rpx;
}
/* recommend_Information  end */

/*buy_footer  start  */
.buy_footer{
  margin: 30rpx;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
}
.buy_footer view{
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
  border: 1px solid #ccc
}
.buy_footer_box1{
  background-color: #f5f5d5;
}
.buy_footer_box2{
  background-color: #3285ff;
}
.buy_footer_box3{
  background-color: #e45034;
}
#sellers_auto_img59{
  width:219rpx;
  height:60rpx;
  margin-top:-5rpx;
}
#time{
  width:60rpx;
  height:50rpx;
}
#time-hm{
  float:right;
  margin-right:25rpx;
  margin-top:5rpx;
}
#money{
  width: 40rpx;
  height: 40rpx; 
}
/*buy_footer  end  */