/* 信息 mMsg */
.mMsg{
display: flex;
height: 140rpx;
border-top: 1px solid #ccc;
border-bottom: 1px solid #ccc;
background: #fff; 
}
.mMsg navigator{
font-size: 30rpx;
text-align: center;
color: #ccc;
width: 250rpx;
border-left: 1px solid #ccc;
}
.mMsg .mMsg-first{
border-left: none;
}
.mMsg image{
width: 64rpx;
height: 64rpx;
margin-top: 10rpx;
}
/* 功能 mFun */
.mFun{
  
  border-bottom: 1px solid #ddd;
