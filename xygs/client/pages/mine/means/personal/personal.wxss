page{
  height: 100%;
  background: #eee;
}
.msg{
  display: flex;
  height: 100rpx;
  padding-left: 30rpx;
  line-height: 100rpx; 
  font-size: 32rpx;  
  border-bottom: 1px solid #ccc;
  background: #fff;
}
.msgS{
  height: 300rpx;
}
.msgS .inputS{
  height: 300rpx;
}
.title{
  flex: 1;
}
.sp{
  flex: 2;
}
.msg input,.msg .content{
  flex: 3;
  height: 100rpx;
  color: #000;
}
.content{
  margin-top: -16rpx;
}
.contentS{
  margin-right: 30rpx;
  color: #bbb;
}
.setMsg{
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 20rpx;    
  width: 90%;
  bottom: 20rpx;  
  background: #1AAD19;
}
.setText{
  text-align: center;
  color: #fff;
}

