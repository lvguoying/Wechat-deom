/* pages/free/integral/integral.wxss */
.header{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.banner{
  position: relative;
}
.order{
  font-size: 40rpx;
  color: white;
  position: absolute;
  top:15%;
  left: 15%;
  transform: translate(-50%,-50%);
  z-index: 9999;
}
.all{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  color: white;
  }
.draw{
  width: 80rpx;
  height: 80rpx;
 
}
.detail{
  width: 80rpx;
  height: 80rpx;
}
.check-detail{
  margin-left: 150rpx;
}
.award{
  display: flex;
  margin-left: 100rpx;
}
.draw,.detail{
  justify-content: space-between;
  vertical-align:middle;
}
.rule{
  word-break: break-all;
  margin-top: 50rpx; 
  font-size: 28rpx; 
  line-height: 50rpx;  
  padding: 20rpx;
}
.title{
  font-weight: bold;
  font-size: 32rpx;
}
