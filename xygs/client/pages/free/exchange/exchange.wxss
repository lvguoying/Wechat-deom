.gift image{
  width: 200rpx;
  height: 200rpx;
}
navigator{
  width: 150rpx;
  height: 80rpx;
  background-color: #7fc7a1;
  color: white;
  text-align: center;
  line-height: 80rpx;
}
.introduce{
  display: flex;
  border-bottom: 1px solid #ccc;
  background-color: white;
  align-items: center;
}
.gift,.button{
  flex:1;
}
.content{
  flex:2;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}
.gift{
  margin-left:30rpx;
}
.count{
  color: red;
}
.information{
  font-size: 24rpx;
  color: #888;
}



