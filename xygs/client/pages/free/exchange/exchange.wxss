/* pages/free/exchange/exchange.wxss */
page{
  background-color: #ccc;
}
.header{
  position: relative;
  height: 200rpx;
  display: flex;
  background-color: white;
  margin-bottom: 30rpx;
}
.header-left,.header-right{
  flex: 1;
  margin-left: 65rpx;
}
.header-left{
  display: flex;
}
.person,.content-right{
  flex: 1
}
.person{
  height: 150rpx;
  width: 150rpx;
  margin-top: 30rpx;
}
.content-right{
  margin-top: 50rpx;
  margin-left: 5rpx;
}
.header-right{
  display: flex;
  flex-direction: column;
}
.mine,.total-integral{
  flex: 1;
}
.total-integral{
  display: flex;
}
.money,.amount{
  justify-content: space-between;
}
.money{
  height: 40rpx;
  width: 40rpx;
  margin: 0 20rpx 0 85rpx;
}
.mine{
  margin-top: 50rpx;
  text-align: center;
  font-size: 28rpx;  
}
